{
  "name": "discord-chat-cleaner",
  "version": "1.0.0",
  "description": "Tool to delete your own Discord messages",
  "main": "src/electron-main.js",
  "author": "Discord Chat Cleaner",
  "scripts": {
    "start": "electron src/electron-main.js",
    "cli": "node src/index.js",
    "web": "node src/web-server.js",
    "build": "electron-builder",
    "test": "jest"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "discord.js-selfbot-v13": "^2.14.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "keytar": "^7.9.0",
    "node-fetch": "^2.6.7",
    "puppeteer": "^21.0.0",
    "readline-sync": "^1.4.10",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2",
    "jest": "^30.1.3",
    "sinon": "^21.0.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4"
  },
  "type": "commonjs",
  "build": {
    "appId": "com.discord.chatcleaner",
    "productName": "Discord Chat Cleaner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
